<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/text_actualNumber"
                android:layout_weight="1"
                android:fontFamily="sans-serif"
                android:gravity="center"
                android:text="0.00"
                android:textAlignment="textEnd"
                android:textAppearance="@android:style/TextAppearance.DeviceDefault.Large"
                android:textSize="36sp"
                android:textStyle="bold"
                android:typeface="monospace" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/btn_n1"
                android:layout_weight="1"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"
                android:gravity="center"
                android:onClick="numberClick"
                android:tag="1"
                android:text="1" />

            <Button
                android:id="@+id/btn_n2"
                android:layout_weight="1"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"
                android:gravity="center"
                android:onClick="numberClick"
                android:tag="2"
                android:text="2" />

            <Button
                android:id="@+id/btn_n3"
                android:layout_weight="1"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"
                android:gravity="center"
                android:onClick="numberClick"
                android:tag="3"
                android:text="3" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/bn_n4"
                android:layout_weight="1"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"
                android:gravity="center"
                android:onClick="numberClick"
                android:tag="4"
                android:text="4" />

            <Button
                android:id="@+id/btn_n5"
                android:layout_weight="1"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"
                android:gravity="center"
                android:onClick="numberClick"
                android:tag="5"
                android:text="5" />

            <Button
                android:id="@+id/btn_n6"
                android:layout_weight="1"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"
                android:gravity="center"
                android:onClick="numberClick"
                android:tag="6"
                android:text="6" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/btn_n7"
                android:layout_weight="1"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"
                android:gravity="center"
                android:onClick="numberClick"
                android:tag="7"
                android:text="7" />

            <Button
                android:id="@+id/btn_n8"
                android:layout_weight="1"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"
                android:gravity="center"
                android:onClick="numberClick"
                android:tag="8"
                android:text="8" />

            <Button
                android:id="@+id/btn_n9"
                android:layout_weight="1"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"
                android:gravity="center"
                android:onClick="numberClick"
                android:tag="9"
                android:text="9" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/btn_n0"
                android:layout_weight="1"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"
                android:gravity="center"
                android:onClick="numberClick"
                android:tag="0"
                android:text="0" />

            <Button
                android:id="@+id/btn_n00"
                android:layout_weight="1"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"
                android:gravity="center"
                android:onClick="numberClick"
                android:tag="00"
                android:text="00" />

            <Button
                android:id="@+id/btn_back"
                android:layout_weight="1"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"
                android:gravity="center"
                android:onClick="deleteClick"
                android:text="del" />
        </TableRow>

        <TableRow>
            <Button
                android:id="@+id/btn_ok_number"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:paddingTop="30dp"
                android:paddingBottom="30dp"
                android:gravity="center"
                android:text="OK" />
        </TableRow>
        <TableRow
            android:paddingTop="48dp">
            <Button
                android:id="@+id/btn_total"
                android:layout_weight="1"
                android:paddingTop="40dp"
                android:paddingBottom="40dp"
                android:gravity="center"
                android:text="TOTAL" />
        </TableRow>
    </TableLayout>

</android.support.constraint.ConstraintLayout>